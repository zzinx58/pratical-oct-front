{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    // "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["pinia-plugin-persist", "node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // elmessage
    "**/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
